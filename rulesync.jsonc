{
  "$schema": "https://raw.githubusercontent.com/dyoshikawa/rulesync/refs/heads/main/config-schema.json",
  // 1. Define the tools you want to keep in sync
  "targets": [
    "agentsmd", // Generates AGENTS.md
    "claudecode", // Generates .claude/config.json etc.
    "qwencode", // Generates Qwen Code configurations
    "copilot", // Generates .github/copilot-instructions.md
    "antigravity",
    "roo"
  ],
  // 2. Define the features to include (Rules, MCP servers, Skills)
  "features": [
    "rules",
    "mcp",
    "commands",
    "subagents",
    "skills",
    "ignore" // Recommended to keep ignore files in sync too
  ],
  "baseDirs": [
    "."
  ],
  "delete": true, // Clean old config files before regenerating
  "simulateCommands": true, // Generate simulated commands
  "simulateSubagents": true, // Generate simulated subagents
  "simulateSkills": true // Generate simulated skills
}