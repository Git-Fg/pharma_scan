{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "sync:backend",
			"type": "shell",
			"detail": "Synchronize schema and golden DB from backend pipeline",
			"command": "cd backend_pipeline && bun run tool/sync.ts",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"close": true
			}
		},
		{
			"label": "build_runner watch",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"watch",
				"--delete-conflicting-outputs"
			],
			"isBackground": true,
			"problemMatcher": [
				"$dart-build_runner"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "build"
			}
		},
		{
			"label": "build_runner build",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"build",
				"--delete-conflicting-outputs"
			],
			"isBackground": false
		},
		{
			"label": "build_runner build",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"build",
				"--delete-conflicting-outputs"
			],
			"isBackground": false
		}
	]
}